<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_home_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_title_home_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/image_view_home_woman"
        app:layout_constraintTop_toTopOf="@id/image_view_home_woman"/>

    <TextView
        android:id="@+id/item_subtitle_home_woman"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:lines="3"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/item_title_home_woman"
        app:layout_constraintTop_toBottomOf="@id/item_title_home_woman"/>

    <TextView
        android:id="@+id/item_price_home_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/home_orange"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_subtitle_home_woman"
        app:layout_constraintStart_toStartOf="@id/item_subtitle_home_woman"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:background="@color/gray"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toEndOf="@id/item_subtitle_home_woman"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_like_home_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_subtitle_home_woman"/>

    <TextView
        android:id="@+id/item_like_count_home_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_like_home_woman"
        app:layout_constraintStart_toStartOf="@id/item_like_home_woman"/>

</androidx.constraintlayout.widget.ConstraintLayout>